<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.rentcar.controller.ClienteController">
    <Label text="Cadastro de Clientes" />
    <TextField fx:id="nomeField" promptText="Nome" />
    <TextField fx:id="cpfField" promptText="CPF" />
    <Button text="Salvar" onAction="#handleSalvarCliente" />
    <TableView fx:id="clienteTable">
        <columns>
            <TableColumn text="ID" />
            <TableColumn text="Nome" />
            <TableColumn text="CPF" />
        </columns>
    </TableView>
</VBox>
