<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.rentcar.controller.VeiculoController">
    <Label text="Cadastro de Veículos" />
    <TextField fx:id="placaField" promptText="Placa" />
    <TextField fx:id="marcaField" promptText="Marca" />
    <TextField fx:id="modeloField" promptText="Modelo" />
    <TextField fx:id="anoField" promptText="Ano de Fabricação" />
    <TextField fx:id="quilometragemField" promptText="Quilometragem" />
    <TextField fx:id="categoriaField" promptText="ID da Categoria" />
    <Button text="Salvar" onAction="#handleSalvarVeiculo" />
    <TableView fx:id="veiculoTable">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" />
            <TableColumn fx:id="placaColumn" text="Placa" />
            <TableColumn fx:id="marcaColumn" text="Marca" />
            <TableColumn fx:id="modeloColumn" text="Modelo" />
        </columns>
    </TableView>
</VBox>
